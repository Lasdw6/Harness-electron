{
  "name": "@harnessgg/electron",
  "version": "0.2.0",
  "description": "CLI harness for AI agents to test Electron apps",
  "main": "dist/cli.js",
  "scripts": {
    "test": "vitest run",
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/cli.ts",
    "prepublishOnly": "npm run build && npm test",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "license": "MIT",
  "type": "module",
  "bin": {
    "harness-electron": "dist/cli.js"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "fs-extra": "^11.3.3",
    "playwright-core": "^1.58.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@harnessgg/electron": "^0.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "docs"
  ],
  "publishConfig": {
    "access": "public"
  }
}
